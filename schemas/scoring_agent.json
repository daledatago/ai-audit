{
  "$id": "https://daledatago.local/schemas/scoring_agent.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Scoring Agent Output",
  "type": "object",
  "properties": {
    "schemaVersion": { "type": "string", "enum": ["0.1"] },
    "workspaceId": { "type": "string", "minLength": 1 },
    "readinessScores": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "dimension": {
            "type": "string",
            "enum": [
              "business_alignment",
              "usecase_intake_prioritisation",
              "data_readiness",
              "technical_capacity",
              "security_privacy",
              "governance_for_motion",
              "ai_fluency_operating_model",
              "measurement_value_tracking"
            ]
          },
          "score0to5": { "type": "number", "minimum": 0, "maximum": 5 },
          "anchorLabel": { "type": "string", "enum": ["0", "1", "2", "3", "4", "5"] },
          "rationale": { "type": "string", "minLength": 1 },
          "citations": {
            "type": "array",
            "items": { "$ref": "common.json#/$defs/Citation" }
          }
        },
        "required": ["dimension", "score0to5", "rationale"],
        "additionalProperties": false
      }
    },
    "useCaseScores": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "useCaseId": { "type": "string", "minLength": 1 },
          "impact0to5": { "type": "number", "minimum": 0, "maximum": 5 },
          "effort0to5": { "type": "number", "minimum": 0, "maximum": 5 },
          "risk0to5": { "type": "number", "minimum": 0, "maximum": 5 },
          "reuse0to5": { "type": "number", "minimum": 0, "maximum": 5 },
          "timeToValue": {
            "type": "string",
            "enum": ["30_days", "60_days", "90_days", "180_days+"]
          },
          "recommended": { "type": "boolean" },
          "rationale": { "type": "string", "minLength": 1 }
        },
        "required": [
          "useCaseId",
          "impact0to5",
          "effort0to5",
          "risk0to5",
          "reuse0to5",
          "recommended"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["schemaVersion", "workspaceId", "readinessScores", "useCaseScores"],
  "additionalProperties": false
}


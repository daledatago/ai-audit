      "required": ["slideId", "title"],
      "additionalProperties": false
    },
    "ArchitecturePack": {
      "type": "object",
      "properties": {
        "templateId": { "type": "string", "enum": ["archpack_v0"] },
        "sections": {
          "type": "array",
          "minItems": 3,
          "items": { "$ref": "#/$defs/Section" }
        }
      },
      "required": ["templateId", "sections"],
      "additionalProperties": false
    },
    "Section": {
      "type": "object",
      "properties": {
        "sectionId": { "type": "string", "minLength": 1 },
        "heading": { "type": "string", "minLength": 1 },

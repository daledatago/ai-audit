{
  "$id": "https://datadatago/schemas/common.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Common",
  "type": "object",
  "$defs": {
    "EvidenceRef": {
      "type": "object",
      "properties": {
        "sourceType": { "type": "string", "enum": ["doc_chunk", "transcript_segment"] },
        "sourceId": { "type": "string", "minLength": 1 },
        "workspaceId": { "type": "string", "minLength": 1 }
      },
      "required": ["sourceType", "sourceId", "workspaceId"],
      "additionalProperties": false
    },
    "Citation": {
      "type": "object",
      "properties": {
        "evidence": { "$ref": "#/$defs/EvidenceRef" },
        "quote": { "type": "string", "minLength": 10, "maxLength": 500 },
        "startOffset": { "type": "integer", "minimum": 0 },
        "endOffset": { "type": "integer", "minimum": 0 },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "required": ["evidence", "quote", "confidence"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}


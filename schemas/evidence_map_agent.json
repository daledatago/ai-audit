{
  "$id": "https://daledatago.local/schemas/evidence_map_agent.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Evidence Map Agent Output",
  "type": "object",
  "properties": {
    "schemaVersion": { "type": "string", "enum": ["0.1"] },
    "workspaceId": { "type": "string", "minLength": 1 },
    "topics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "topicId": { "type": "string", "minLength": 1 },
          "label": { "type": "string", "minLength": 1 },
          "summary": { "type": "string" },
          "citations": {
            "type": "array",
            "minItems": 1,
            "items": { "$ref": "common.json#/$defs/Citation" }
          }
        },
        "required": ["topicId", "label", "citations"],
        "additionalProperties": false
      }
    }
  },
  "required": ["schemaVersion", "workspaceId", "topics"],
  "additionalProperties": false
}

